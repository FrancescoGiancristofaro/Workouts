<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="WorkoutsApp.Pages.Templates.Components.WorkoutsEntry"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="WorkutsEntryConrol">
    <Frame BackgroundColor="Transparent" BindingContext="{x:Reference WorkutsEntryConrol}">
        <Grid RowDefinitions="Auto,Auto,Auto">
            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="15"
                Text="{Binding TopLabel}"
                TextColor="{StaticResource Tertiary}" />
            <Entry Margin="0,10,0,0"
                Grid.Row="1"
                Keyboard="{Binding Keyboard}"
                Placeholder="{Binding Placeholder}"
                PlaceholderColor="LightGray"
                Text="{Binding Text}"
                TextColor="Black" />
            <BoxView Grid.Row="2" HeightRequest="1" BackgroundColor="{StaticResource Tertiary}"></BoxView>
        </Grid>
    </Frame>
</ContentView>
