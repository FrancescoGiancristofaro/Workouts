<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkoutsApp.Pages.Templates.BasePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="BaseWorkoutsPage"
    BackgroundColor="{StaticResource Primary}"
    ControlTemplate="{StaticResource MyControlTemplate}">
    <ContentPage.Behaviors>
        <behaviors:EventToCommandBehavior Command="{Binding Source={x:Reference BaseWorkoutsPage}, Path=BindingContext.BaseAppearingCommand}" EventName="Appearing" />
        <behaviors:EventToCommandBehavior Command="{Binding Source={x:Reference BaseWorkoutsPage}, Path=BindingContext.BaseDisappearingCommand}" EventName="Disappearing" />
    </ContentPage.Behaviors>
</ContentPage>